{
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "hostRequirements": {
    "cpus": 1
  },
  "waitFor": "postCreateCommand",
  "postCreateCommand": {
    "init-submodules": "git submodule update --init --recursive",
    "activate-venv": "source /venv/bin/activate"
  },
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "lf-lang.vscode-lingua-franca",
        "kieler.klighd-vscode"
      ]
    }
  }
}